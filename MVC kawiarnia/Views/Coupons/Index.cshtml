    </tr>

    @foreach (var item in ViewBag.OldEvent)
    {
        <tr>
            <td>
                @Html.Raw(item.CompanyName)
            </td>
            <td>
                @Html.Raw(item.Title)
            </td>
            <td>
                <div class="img_small">  <img src="@item.Files" alt="Tu powinien być obrazek"> </div>
            </td>
            <td>
                @Html.Raw(item.UnderTitle)
            </td>
            <td>
                @item.Code
            </td>
