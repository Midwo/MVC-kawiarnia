@model IEnumerable<MVC_kawiarnia.Models.Coupons>

@{
    ViewBag.Title = "System kuponów";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="image-aboutus-sm-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">System kuponów i promocji - Menu główne</h1>
                <div class="col-sm-4">
                    <h4>Serdecznie proszę o:</h4>
                    <ul>
                        <li>
                            Nie używanie wulgaryzmów w treści systemu
                        </li>
                        <li>
                            Pozostanie chociaż paru wpisów w bazie danych
                        </li>
                        <li>
                            Odwiedzić autora na stronie: www.mdwojak.pl
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4">
                    <h4><b>Możesz tutaj:</b></h4>
                    <ul>
                        <li>
                            <b>Przejść do dodawania promocji/kuponu</b>
                        </li>
                        <li>
                            <b>Przejsć do edycji promocji/kuponów</b>
                        </li>
                        <li>
                            <b>Przejść do usuwania promocji/kuponów </b>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4">
                    <h4>Kontakt z autorem:</h4>
                    <ul>
                        <li>
                            Strona: www.mdwojak.pl
                        </li>
                        <li>
                            Email: michal.dwojak92@gmail.com | michal.mdwojak.pl
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<input type="button" class="btn btn-primary" value="Dodaj nowy kupon/promocję" onclick="location.href='@Url.Action("Create")'" />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Files)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnderTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw(item.CompanyName)
        </td>
        <td>
            @Html.Raw(item.Title)
        </td>
        <td>
            <div class="img_small">  <img src="@Html.DisplayFor(modelItem => item.Files)" alt="Tu powinien być obrazek"> </div>
        </td>
        <td>
            @Html.Raw(item.UnderTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edycja", "Edit", new { id=item.CouponsId }) |
            @Html.ActionLink("Podgląd", "Details", new { id=item.CouponsId }) |
            @Html.ActionLink("Usuwanie", "Delete", new { id=item.CouponsId })
        </td>
    </tr>
}

</table>
