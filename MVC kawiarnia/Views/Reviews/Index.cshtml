@model IEnumerable<MVC_kawiarnia.Models.Reviews>

@{
    ViewBag.Title = "Menu opinii";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="image-aboutus-sm-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">System opinii - Menu główne</h1>
                <div class="col-sm-4">
                    <h4>Serdecznie proszę o:</h4>
                    <ul>
                        <li>
                            Nie używanie wulgaryzmów w treści systemu
                        </li>
                        <li>
                            Pozostanie chociaż paru wpisów w bazie danych
                        </li>
                        <li>
                            Odwiedzić autora na stronie: www.mdwojak.pl
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4">
                    <h4><b>Możesz tutaj:</b></h4>
                    <ul>
                        <li>
                            <b> Edytować treść kogoś opinii jak i swoją</b>
                        </li>
                        <li>
                            <b>Wprowadzać nowe opinie do systemu</b>
                        </li>
                        <li>
                            <b>Usuwać opinie, które Ci nie odpowiadają</b>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4">
                    <h4>Kontakt z autorem:</h4>
                    <ul>
                        <li>
                            Strona: www.mdwojak.pl
                        </li>
                        <li>
                            Email: michal.dwojak92@gmail.com | michal.mdwojak.pl
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<input type="button" class="btn btn-primary" value="Utwórz nową opinie" onclick="location.href='@Url.Action("Create")'" />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RatingEmployees.RatingEmployeesId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RatingMeals.RatingMealsId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RatingPlace.RatingPlaceId)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.Raw(item.ReviewText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingEmployees.RatingEmployeesId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingMeals.RatingMealsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingPlace.RatingPlaceId)
            </td>

            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.ReviewsId }) |
                @Html.ActionLink("Detale", "Details", new { id = item.ReviewsId }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.ReviewsId })
            </td>
        </tr>
    }

</table>
