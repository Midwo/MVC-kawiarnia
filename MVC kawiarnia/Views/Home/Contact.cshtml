            </div>
            <br />
            <div class="chip">
                <img src="~/Content/Image/Icon/icons8-saturday-100.png" alt="Sa" width="96" height="96">
                @Html.DisplayFor(modelItem => item.Sa)
            </div>
            <div class="chip">
