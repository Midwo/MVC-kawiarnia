            @Html.LabelFor(model => model.ContentString, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ContentString, new { @class = "ckeditor" })
                @Html.ValidationMessageFor(model => model.ContentString, "", new { @class = "text-danger" })
            </div>
        </div>

