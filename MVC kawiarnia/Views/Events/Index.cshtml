@model IEnumerable<MVC_kawiarnia.Models.Event>

@{
    ViewBag.Title = "System wydarzeń";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="image-aboutus-sm-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">System wydarzeń - Menu główne</h1>
                <div class="col-sm-4">
                    <h4>Serdecznie proszę o:</h4>
                    <ul>
                        <li>
                            Nie używanie wulgaryzmów w treści systemu
                        </li>
                        <li>
                            Pozostanie chociaż paru wpisów w bazie danych
                        </li>
                        <li>
                            Odwiedzić autora na stronie: www.mdwojak.pl
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4">
                    <h4><b>Możesz tutaj:</b></h4>
                    <ul>
                        <li>
                            <b>Przejsć do edycji wydarzeń</b>
                        </li>
                        <li>
                            <b>Przejść do dodawania nowych wydarzeń</b>
                        </li>
                        <li>
                            <b>Podejrzeć dane wydarzenie</b>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4">
                    <h4>Kontakt z autorem:</h4>
                    <ul>
                        <li>
                            Strona: www.mdwojak.pl
                        </li>
                        <li>
                            Email: michal.dwojak92@gmail.com | michal.mdwojak.pl
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<input type="button" class="btn btn-primary" value="Dodaj nowe wydarzenie" onclick="location.href='@Url.Action("Create")'" />
<br />
<h2>Aktualne eventy - lista:</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentString)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Files)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlFb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSort)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateInPage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.ActualEvent)
    {
        <tr>
            <td>
                @Html.Raw(item.Title)
            </td>
            <td>
                @Html.Raw(item.ContentString)
            </td>
            <td>
                <div class="img_small">  <img src="@item.Files" alt="Tu powinien być obrazek"> </div>
            </td>
            <td>
                @item.UrlFb
            </td>
            <td>
                @item.DateSort.ToString("dd/MM/yyyy")

            </td>
            <td>
                @item.DateInPage
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.EventId }) |
                @Html.ActionLink("Podgląd", "Details", new { id = item.EventId }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.EventId })
            </td>
        </tr>
    }

</table>
<br /><br />
