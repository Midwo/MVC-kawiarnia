        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.File)
        </dt>

        <dd>
            <div class="img_small">  <img src="@Html.DisplayFor(modelItem => Model.File)" alt="Tu powinien być obrazek" /> </div>
        </dd>

    </dl>
</div>
<p>
