@model MVC_kawiarnia.Models.AboutPage

@{
    ViewBag.Title = "System historii";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="image-aboutus-sm-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">System historii z zakładki: o nas - Menu usuwania</h1>
                <div class="col-sm-4">
                    <h4>Serdecznie proszę o:</h4>
                    <ul>
                        <li>
                            Nie używanie wulgaryzmów w treści systemu
                        </li>
                        <li>
                            Pozostanie chociaż paru wpisów w bazie danych
                        </li>
                        <li>
                            Odwiedzić autora na stronie: www.mdwojak.pl
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4">
                    <h4><b>Możesz tutaj:</b></h4>
                    <ul>
                        <li>
                            <b>Usunąć wpis z lini czasu</b>
                        </li>
                        <li>
                            <b>Wrócić do listy</b>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4">
                    <h4>Kontakt z autorem:</h4>
                    <ul>
                        <li>
                            Strona: www.mdwojak.pl
                        </li>
                        <li>
                            Email: michal.dwojak92@gmail.com | michal.mdwojak.pl
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

<h3>Czy na pewno chcesz usunąć ten wpis z lini czasu?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.Raw(Model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateSort)
        </dt>

        <dd>
            @Html.Raw(Model.DateSort)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.Raw(Model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UnderTitle)
        </dt>

        <dd>
            @Html.Raw(Model.UnderTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OwnerInfo)
        </dt>

        <dd>
            @Html.Raw(Model.OwnerInfo)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Wróć do listy", "Index")
        </div>
    }
</div>
